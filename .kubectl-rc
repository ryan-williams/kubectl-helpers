sha_dir() {
	for dir in "$@"; do
		d="${dir%/}"
		escaped="$(echo "$d/" | escape-regex)"
		find "$d" -type f | p shasum | perl -pe "s/$escaped//" | sort -k2
	done
}
export -f sha_dir

diff_apply() {
	cmd="$1"
	shift
	if [ $# -eq 2 ]; then
		echo "$1" "$2" | pc "diff <($cmd {1}) <($cmd {2})"
	else
		pc "diff <($cmd {1}) <($cmd {2})"
	fi
}
